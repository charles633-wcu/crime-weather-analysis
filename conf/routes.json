[
  {
    "id": "data-api",
    "uri": "/api/*",
    "methods": ["GET", "OPTIONS"],
    "plugins": {
      "cors": {
        "allow_origins": "*",
        "allow_methods": "GET,POST,PUT,DELETE,OPTIONS",
        "allow_headers": "*",
        "expose_headers": "*",
        "max_age": 3600
      }
    },
    "upstream": {
      "type": "roundrobin",
      "nodes": {
        "data-service:8080": 1
      }
    }
  },
  {
    "id": "analytics-api",
    "uri": "/analytics/*",
    "methods": ["GET", "OPTIONS"],
    "plugins": {
      "cors": {
        "allow_origins": "*",
        "allow_methods": "GET,OPTIONS",
        "allow_headers": "*"
      }
    },
    "upstream": {
      "type": "roundrobin",
      "nodes": {
        "analytics-service:8090": 1
      }
    }
  }
]



